<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/sidebar.css" />
    <title>Create Folder - My Drive</title>
    <style>
      form {
        background: white;
        padding: 2rem;
        border: 1px solid #ffd2c0;
        border-radius: 1rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        max-width: 500px;
      }
      label {
        display: block;
        margin-top: 1rem;
        font-weight: bold;
        color: #444;
      }
      input[type="text"] {
        width: 100%;
        padding: 0.5rem;
        margin-top: 0.5rem;
        border: 1px solid #ffd2c0;
        border-radius: 0.5rem;
      }
      button[type="submit"] {
        margin-top: 1.5rem;
        padding: 0.75rem 1.5rem;
        background-color: #ff7f50;
        border: none;
        border-radius: 0.5rem;
        color: white;
        font-weight: bold;
        cursor: pointer;
      }
      button[type="submit"]:hover {
        background-color: #ff6333;
      }
    </style>
  </head>
  <body>
    <button style="color: black" class="menu-toggle" onclick="toggleSidebar()">
      â˜°
    </button>
    <div class="container">
      <%- include('sidebar.ejs')%>
      <main class="main">
        <div class="topbar">
          Welcome, <span><%=currentUser.email%> </span> |
          <a href="#">Logout</a>
        </div>
        <h1>Create New Folder</h1>
        <form onsubmit="event.preventDefault(); alert('Folder created!');">
          <label for="folderName">Folder Name:</label>
          <input
            type="text"
            id="folderName"
            name="folderName"
            placeholder="e.g. Documents"
            required
          />
          <button type="submit">Create Folder</button>
        </form>
      </main>
    </div>

    <script>
      function toggleSidebar() {
        document.getElementById("sidebar").classList.toggle("hidden");
      }
      function addActiveIndicator(element) {
        const elementDiv = document.querySelector(`.${element}`);
        console.log(elementDiv);
        if (elementDiv) {
          elementDiv.classList.add("active");
        }
      }

      addActiveIndicator("uploadFolderSide");
    </script>
  </body>
</html>
