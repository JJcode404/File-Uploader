<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/sidebar.css" />
    <link rel="stylesheet" href="css/allfolders.css" />
    <title>Folder List - My Drive</title>
  </head>
  <body>
    <button class="menu-toggle" onclick="toggleSidebar()">â˜° Menu</button>
    <div class="container">
      <%- include('sidebar') %>
      <main class="main">
        <%- include('welcome.ejs')%>
        <h1>My Folders</h1>
        <div class="folder-list">
          <% folders.forEach(folder => { %>
          <div class="folder">
            <p><%= folder.name %></p>
            <p>
              Created on: <%= new Date(folder.createdAt).toLocaleDateString() %>
            </p>
            <div class="folder-buttons">
              <button>View</button>
              <button class="delete-btn">Delete</button>
            </div>
          </div>
          <% }); %>
        </div>
      </main>
    </div>
    <script>
      function toggleSidebar() {
        document.getElementById("sidebar").classList.toggle("hidden");
      }
      function addActiveIndicator(element) {
        const elementDiv = document.querySelector(`.${element}`);
        if (elementDiv) {
          elementDiv.classList.add("active");
        }
      }

      addActiveIndicator("folderSide");
    </script>
  </body>
</html>
