<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/sidebar.css" />
    <link rel="stylesheet" href="/css/allfiles.css" />
    <title>All Files - My Drive</title>
  </head>
  <body>
    <button class="menu-toggle" onclick="toggleSidebar()">â˜° Menu</button>
    <div class="container">
      <%- include('sidebar')%>
      <main class="main">
        <%- include('welcome.ejs')%>
        <h1>All Files</h1>
        <div class="file-list" id="fileList">
          <% files.forEach(file => { %>
          <div class="file">
            <span class="file-name"><%= file.fileName %></span>
            <span class="file-meta">
              <%= (file.fileSize / (1024 * 1024)).toFixed(2) %> MB - Uploaded on
              <%= new Date(file.uploadedAt).toLocaleDateString('en-US', { year:
              'numeric', month: 'short', day: 'numeric' }) %>
            </span>
            <div class="action">
              <a href="#"><button class="delete-btn">Delete</button></a>
              <a href="#"
                ><img src="/images/download.svg" alt="dowload button icon"
              /></a>
            </div>
          </div>
          <% }); %>
        </div>
      </main>
    </div>
    <script>
      function toggleSidebar() {
        document.getElementById("sidebar").classList.toggle("hidden");
      }
      function addActiveIndicator(element) {
        const elementDiv = document.querySelector(`.${element}`);
        console.log(elementDiv);
        if (elementDiv) {
          elementDiv.classList.add("active");
        }
      }

      addActiveIndicator("fileSide");
    </script>
  </body>
</html>
